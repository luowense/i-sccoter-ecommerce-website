{% extends 'layout.html.twig' %}
{% block content %}
    <main class="page payment-page">
        <section class="payment-form dark">
            <div class="container">
                <div class="block-heading">
                    <h1>Payment</h1>
                </div>
                <form>
                    <div class="products">
                        <h3 class="title">Checkout</h3>
                        {% set priceTot = 0 %}
                        {% if cartDisplay is not empty %}
                            {% for article in cartDisplay %}
                                {% for data in cartData %}
                                    {% if article.reference_id == data.reference_id %}
                                        <div class="item">
                                            <span class="price">{{ article.price }}$</span>
                                            <p class="item-name">{{ article.name }}</p>
                                            <p class="item-description">Quantity : {{ data.quantity }}</p>
                                        </div>
                                        {% set priceTot = priceTot + (data.quantity * article.price) %}
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        {% endif %}
                        <div class="total">Total<span class="price">{{ priceTot }}$</span></div>
                    </div>
                    <div class="card-details">
                        <h3 class="title">Credit Card Details</h3>
                        <div class="row">
                            <div class="form-group col-sm-7">
                                <label for="card-holder">Card Holder</label>
                                <input id="card-holder" type="text" class="form-control" placeholder="Card Holder"
                                       aria-label="Card Holder" aria-describedby="basic-addon1">
                            </div>
                            <div class="form-group col-sm-5">
                                <label for="">Expiration Date</label>
                                <div class="input-group expiration-date">
                                    <input type="text" class="form-control" placeholder="MM" aria-label="MM"
                                           aria-describedby="basic-addon1">
                                    <span class="date-separator">/</span>
                                    <input type="text" class="form-control" placeholder="YY" aria-label="YY"
                                           aria-describedby="basic-addon1">
                                </div>
                            </div>
                            <div class="form-group col-sm-8">
                                <label for="card-number">Card Number</label>
                                <input id="card-number" type="text" class="form-control" placeholder="Card Number"
                                       aria-label="Card Holder" aria-describedby="basic-addon1">
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="cvc">CVC</label>
                                <input id="cvc" type="text" class="form-control" placeholder="CVC"
                                       aria-label="Card Holder" aria-describedby="basic-addon1">
                            </div>
                            <div class="form-group col-sm-12">
                                <a class="btn btn-primary btn-block" href="/Checkout/success"
                                   role="button">Proceed</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>
{% endblock %}
